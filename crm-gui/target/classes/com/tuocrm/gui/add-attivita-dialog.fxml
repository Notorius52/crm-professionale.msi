<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.tuocrm.gui.AddAttivitaDialogController">
    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
    <Label text="Descrizione:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="descrizioneField" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Cliente Collegato:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ComboBox fx:id="clienteComboBox" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="Data Scadenza:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <DatePicker fx:id="dataPicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Stato:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="statoField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="4">
        <Button onAction="#onSalvaClicked" text="Salva" />
        <Button onAction="#onAnnullaClicked" text="Annulla" />
    </HBox>
</GridPane>