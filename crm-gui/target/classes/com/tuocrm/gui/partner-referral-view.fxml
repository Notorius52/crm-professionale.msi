<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tuocrm.gui.PartnerReferralController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Partner e Referral" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    <Label text="Gestisci la tua rete di partner e i clienti che ti presentano." />

    <TableView fx:id="partnerTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nomeColumn" prefWidth="200.0" text="Nome Partner" />
            <TableColumn fx:id="aziendaColumn" prefWidth="200.0" text="Azienda" />
            <TableColumn fx:id="emailColumn" prefWidth="250.0" text="Email" />
            <TableColumn fx:id="referralColumn" prefWidth="120.0" text="Referral Generati" />
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#onNuovoPartnerClicked" text="Nuovo Partner..." />
        <Button onAction="#onModificaClicked" text="Modifica..." />
        <Button onAction="#onEliminaClicked" text="Elimina" />
    </HBox>
</VBox>