<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.tuocrm.gui.AddClienteDialogController">
    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>

    <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="nomeField" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Cognome:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="cognomeField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Azienda:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="aziendaField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Telefono:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="telefonoField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Stato:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="statoField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Partner:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <ComboBox fx:id="partnerComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="7">
        <Button onAction="#onSalvaClicked" text="Salva" />
        <Button onAction="#onAnnullaClicked" text="Annulla" />
    </HBox>

</GridPane>