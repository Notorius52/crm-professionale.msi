<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tuocrm.gui.AttivitaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Gestione Attività" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    <Label text="Traccia le tue prossime azioni e scadenze." />

    <TableView fx:id="attivitaTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="descrizioneColumn" prefWidth="350.0" text="Descrizione" />
            <TableColumn fx:id="clienteIdColumn" prefWidth="100.0" text="ID Cliente" />
            <TableColumn fx:id="dataScadenzaColumn" prefWidth="150.0" text="Data Scadenza" />
            <TableColumn fx:id="statoColumn" prefWidth="120.0" text="Stato" />
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#onNuovaAttivitaClicked" text="Nuova Attività..." />
        <Button onAction="#onModificaClicked" text="Modifica..." />
        <Button onAction="#onEliminaClicked" text="Elimina" />
    </HBox>
</VBox>