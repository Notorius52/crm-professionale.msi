<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tuocrm.gui.DashboardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Dashboard Riepilogativa" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <HBox alignment="CENTER" spacing="30.0">
        <VBox alignment="CENTER" style="-fx-background-color: #eef; -fx-padding: 15px;">
            <Label text="Totale Clienti" style="-fx-font-size: 14px;" />
            <Label fx:id="kpiTotaleClienti" text="0" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
        </VBox>
        <VBox alignment="CENTER" style="-fx-background-color: #efe; -fx-padding: 15px;">
            <Label text="Totale Partner" style="-fx-font-size: 14px;" />
            <Label fx:id="kpiTotalePartner" text="0" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
        </VBox>
        <VBox alignment="CENTER" style="-fx-background-color: #fee; -fx-padding: 15px;">
            <Label text="Campagne Attive" style="-fx-font-size: 14px;" />
            <Label fx:id="kpiCampagneAttive" text="0" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
        </VBox>
    </HBox>

    <GridPane hgap="20" vgap="20">
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="Clienti per Stato" style="-fx-font-weight: bold;" />
            <PieChart fx:id="clientiStatusChart" title="" legendVisible="false" />
        </VBox>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="Lead per Campagna" style="-fx-font-weight: bold;" />
            <BarChart fx:id="campagneLeadChart" title="" legendVisible="false">
                <xAxis><CategoryAxis side="BOTTOM" /></xAxis>
                <yAxis><NumberAxis side="LEFT" /></yAxis>
            </BarChart>
        </VBox>
    </GridPane>
</VBox>