<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.tuocrm.gui.ClientiController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <HBox>
        <TextField fx:id="searchField" promptText="Cerca per nome, cognome o azienda..." HBox.hgrow="ALWAYS"/>
    </HBox>
    
    <TableView fx:id="clientiTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="nomeColumn" text="Nome" prefWidth="150"/>
            <TableColumn fx:id="cognomeColumn" text="Cognome" prefWidth="150"/>
            <TableColumn fx:id="aziendaColumn" text="Azienda" prefWidth="200"/>
            <TableColumn fx:id="statoColumn" text="Stato" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#onNuovoClienteClicked" text="Nuovo Cliente..."/>
        <Button onAction="#onModificaClienteClicked" text="Modifica..."/>
        <Button onAction="#onEliminaClienteClicked" text="Elimina"/>
    </HBox>
</VBox>