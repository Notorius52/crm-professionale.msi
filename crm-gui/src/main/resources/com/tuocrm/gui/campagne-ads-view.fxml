<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tuocrm.gui.CampagneADSController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Gestione Campagne ADS" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    <Label text="Monitora le performance delle tue campagne pubblicitarie." />

    <TableView fx:id="campagneTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nomeColumn" prefWidth="250.0" text="Nome Campagna" />
            <TableColumn fx:id="piattaformaColumn" prefWidth="120.0" text="Piattaforma" />
            <TableColumn fx:id="budgetColumn" prefWidth="100.0" text="Budget (â‚¬)" />
            <TableColumn fx:id="leadsColumn" prefWidth="120.0" text="Lead Generati" />
            <TableColumn fx:id="statoColumn" prefWidth="100.0" text="Stato" />
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#onNuovaCampagnaClicked" text="Nuova Campagna..." />
        <Button onAction="#onModificaClicked" text="Modifica..." />
        <Button onAction="#onEliminaClicked" text="Elimina" />
    </HBox>
</VBox>